{{!-- Chat Room Content --}}
<div class="row">


  {{!-- View All Messages --}}
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><center>The Public Scat Room</center></h3>
      </div>
      <div class="panel-body">

        {{!-- Toggle English and Poo Text --}}
        <div class="row">
          <div class="col-xs-12">
              <ul class="nav nav-pills nav-justified">
                <li class="active"><a href="#"">Poo Text</a></li>
                <li class="disabled"><a href="#">Human Text</a></li>
              </ul>
              <br>
          </div>
        </div>


        <div id="chatRoomMessages" class="row">

          {{!-- View All Messages --}}
          <div class="col-xs-12" id="messages">
          </div>


        </div>
      </div>
    </div>
  </div>


  {{!-- Send Messages --}}
  <div class="col-md-4 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Crappy Messages Here</center></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          {{!-- User Name Box --}}
          <div class="col-md-12 col-xs-12">
            <center><h4>Your Crappy Name</h4></center>
            <input id="nameBox" type="text" class="input-required form-control" placeholder="Anonymous">
          </div>
          <br>
          {{!-- User Input Box --}}
          <div class="col-md-12 col-xs-12">
            <center><h4>Your Crappier Message</h4></center>
            <textarea id="messageBox" rows="8" class="input-required form-control" placeholder="Hello Crappy World!"></textarea>
          </div>
          {{!-- User Submit Button --}}
          <div class="col-md-12 col-xs-12">
            <center>
              <br>
              <button id="submitButton" type="button" class="btn btn-success">Send Message</button>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>



</div>


